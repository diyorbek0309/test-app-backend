{
  "name": "test-app-backend",
  "version": "1.0.0",
  "description": "Test Application",
  "main": "index.js",
  "scripts": {
    "dev": "set NODE_ENV=dev && ts-node-dev index.ts --debug",
    "start": "node dist/index.js",
    "build": "tsc -p .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format:write": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint-staged": "lint-staged --config lint-staged.ts",
    "husky-install": "husky install"
  },
  "author": "Diyorbek Olimov",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "2.4.3",
    "dotenv": "16.0.2",
    "express": "4.18.1",
    "joi": "17.6.0",
    "jsonwebtoken": "8.5.1",
    "mongoose": "6.6.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/express": "4.17.14",
    "@types/jsonwebtoken": "8.5.9",
    "@types/node": "18.7.18",
    "@typescript-eslint/eslint-plugin": "5.37.0",
    "@typescript-eslint/parser": "5.37.0",
    "eslint": "8.23.1",
    "eslint-config-prettier": "8.5.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "typescript": "4.8.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --ext .tsx --ext .ts ./src --fix"
    ],
    "./src/**": [
      "prettier --write ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
